Subject: [PATCH] Only inlude sktime package.

This avoids having the build_tools, docs and other unnecessary things to be
installed in site-packages's root.

---
 pyproject.toml | 6 +++---
 1 file changed, 3 insertions(+), 3 deletions(-)

diff --git a/pyproject.toml b/pyproject.toml
index dd7fe360..e06a750e 100644
--- a/pyproject.toml
+++ b/pyproject.toml
@@ -290,6 +290,9 @@ requires = [
   "setuptools>61",
 ]
 
+[tool.setuptools]
+packages = ["sktime"]
+
 [tool.setuptools.package-data]
 sktime = [
   "*.csv",
@@ -301,9 +304,6 @@ sktime = [
   "*.tsv",
 ]
 
-[tool.setuptools.packages.find]
-exclude = ["tests", "tests.*"]
-
 [tool.nbqa.exclude]
 black = "^docs/source/examples/"
 flake8 = "^docs/source/examples/"
